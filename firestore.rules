rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /exercises/{exerciseId} {
      allow read: if request.auth != null;
    }

    match /guardian_relations/{docId} {
      // Allow read/write only if the authenticated user is the requester or the target
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.requester_uid || request.auth.uid == resource.data.guardian_uid);
        
      // Allow creation for any authenticated user
      allow create: if request.auth != null;
    }
  }
}
