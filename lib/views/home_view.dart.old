/// HomeView - Dashboard Screen (Refactored with Riverpod + Clean Architecture)
class HomeView extends ConsumerStatefulWidget {
  const HomeView({super.key});

  @override
  ConsumerState<HomeView> createState() => _HomeViewState();
}

class _HomeViewState extends ConsumerState<HomeView> {
  // Local UI state (not business logic)
  List<SessionAnalysis> _sessionHistory = [];
  bool _isHistoryLoading = false;
  Map<String, double> _downloadProgress = {};
  Map<String, bool> _isDownloading = {};

  @override
  void initState() {
    super.initState();
    // Load data using ViewModel
    Future.microtask(() {
      ref.read(homeViewModelProvider).loadData();
      _loadHistory();
      _updateCacheStatus();
    });
  }

  Future<void> _loadHistory() async {
    if (!mounted) return;
    setState(() => _isHistoryLoading = true);
    try {
      final history = await SessionAnalysis.loadAll();
      if (mounted) {
        setState(() {
          _sessionHistory = history;
        });
      }
    } catch (e) {
      debugPrint('Error loading history: $e');
    } finally {
      if (mounted) {
        setState(() => _isHistoryLoading = false);
      }
    }
  }

  Future<void> _updateCacheStatus() async {
    // Wait for curriculum to load
    await Future.delayed(const Duration(milliseconds: 500));
    final viewModel = ref.read(homeViewModelProvider);
    if (viewModel.todayCurriculum == null) return;

    final cacheService = CacheService();
    for (final task in viewModel.todayCurriculum!.workoutTasks) {
      final isCached = await cacheService.isTaskCached(task);
      if (mounted) {
        setState(() {
          _downloadProgress[task.id] = isCached ? 1.0 : 0.0;
        });
      }

      // Start background download if not cached
      if (!isCached) {
        _startBackgroundDownload(task);
      }
    }
  }

  Future<void> _startBackgroundDownload(WorkoutTask task) async {
    if (_isDownloading[task.id] == true) return;

    setState(() => _isDownloading[task.id] = true);

    try {
      final cacheService = CacheService();
      await cacheService.cacheWorkoutResources(
        [task],
        onProgress: (completed, total, currentItem) {
          if (mounted) {
            setState(() {
              _downloadProgress[task.id] = completed / total;
            });
          }
        },
      );

      if (mounted) {
        setState(() {
          _downloadProgress[task.id] = 1.0;
          _isDownloading[task.id] = false;
        });
      }
    } catch (e) {
      debugPrint('Error downloading resources for ${task.title}: $e');
      if (mounted) {
        setState(() => _isDownloading[task.id] = false);
      }
    }
  }

  void _openSettings() {
    Navigator.of(
      context,
    ).push(MaterialPageRoute(builder: (_) => const SettingsView()));
  }

  void _openAIChat() {
    Navigator.of(
      context,
    ).push(MaterialPageRoute(builder: (_) => const AIChatView()));
  }

  void _startWorkout() {
    final viewModel = ref.read(homeViewModelProvider);
    if (viewModel.todayCurriculum == null) {
      ScaffoldMessenger.of(
        context,
      ).showSnackBar(const SnackBar(content: Text('No curriculum available')));
      return;
    }

    Navigator.of(context).push(
      MaterialPageRoute(
        builder: (_) => CameraView(curriculum: viewModel.todayCurriculum!),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    final viewModel = ref.watch(homeViewModelProvider);

    return Scaffold(
      backgroundColor: const Color(0xFF0A0E21),
      body: SafeArea(
        child: viewModel.isLoading
            ? const Center(child: CircularProgressIndicator())
            : RefreshIndicator(
                onRefresh: () => ref.read(homeViewModelProvider).loadData(),
                child: SingleChildScrollView(
                  physics: const AlwaysScrollableScrollPhysics(),
                  child: Column(
                    children: [
                      _buildHeader(viewModel),
                      const SizedBox(height: 24),
                      _buildDailyStats(viewModel),
                      const SizedBox(height: 24),
                      _buildCategoryChips(viewModel),
                      const SizedBox(height: 24),
                      if (viewModel.featuredProgram != null ||
                          viewModel.todayCurriculum != null)
                        Padding(
                          padding: const EdgeInsets.symmetric(horizontal: 20.0),
                          child: _buildFeaturedProgramCard(viewModel),
                        ),
                      const SizedBox(height: 24),
                      if (viewModel.todayCurriculum != null)
                        Padding(
                          padding: const EdgeInsets.symmetric(horizontal: 20.0),
                          child: _buildCurriculumList(viewModel),
                        ),
                      const SizedBox(height: 24),
                      if (_sessionHistory.isNotEmpty)
                        Padding(
                          padding: const EdgeInsets.symmetric(horizontal: 20.0),
                          child: _buildRecentActivity(),
                        ),
                      const SizedBox(height: 100),
                    ],
                  ),
                ),
              ),
      ),
      floatingActionButton: _buildFloatingBottomNav(),
      floatingActionButtonLocation: FloatingActionButtonLocation.centerFloat,
    );
  }

  Widget _buildHeader(HomeViewModel viewModel) {
