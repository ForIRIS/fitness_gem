  Widget _buildTaskIcon(WorkoutTask task) {
    if (_isDownloading[task.id] == true) {
      return const CircularProgressIndicator(
        strokeWidth: 2,
        color: Colors.white,
      );
    }
    return const Icon(Icons.fitness_center, color: Color(0xFF667eea), size: 20);
  }

  Widget _buildTaskStatusIcon(WorkoutTask task) {
    if (_isDownloading[task.id] == true) {
      return Text(
        '${((_downloadProgress[task.id] ?? 0) * 100).toInt()}%',
        style: GoogleFonts.barlow(
          fontSize: 12,
          color: const Color(0xFF667eea),
          fontWeight: FontWeight.bold,
        ),
      );
    }
    if ((_downloadProgress[task.id] ?? 0) >= 1.0) {
      return const Icon(Icons.check_circle, color: Color(0xFF43A047), size: 20);
    }
    return const Icon(
      Icons.download_for_offline_outlined,
      color: Colors.white38,
    );
  }

  Widget _buildRecentActivity() {
    if (_isHistoryLoading && _sessionHistory.isEmpty) {
      return const SizedBox.shrink();
